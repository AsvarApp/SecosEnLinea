                    width={300}
                    sizes="300"
                    format={"webp"}
                    widths={[200, 300, 400]}
                    aspectRatio="16:9"
                    fit="inside"
                    class="bg-slate-200 w-44 h-48 object-cover"
                    loading=""
                    src={`${lotery.img}`}
