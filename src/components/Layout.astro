---
import Footer from "./Footer.astro";

interface Props {
	pageTitle: String;
}
const { pageTitle } = Astro.props;
import Header from "./Header/Header.astro";
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Secos en Línea | {pageTitle}</title>
		<meta
			name="description"
			content="Encuentra en un solo sitio las imágenes de los secos de todas las loterías de Colombia y sus premios adicionales desde el año 2023 hasta el día de hoy."
		/>
		<meta
			name="keywords"
			content="Secos, Secos en linea, Lotería, Resultado lotería, Resultado lotería hoy, Cundinamarca, Tolima, Cruz Roja, Huila, Meta, Manizales, Valle, Bogotá, Quindio, Medellín, Risaralda, Santander, Boyacá, Cauca, Extra de Colombia, Extra de Medellín, Extra de Boyacá, Extra de Navidad, Lotería hoy, Lotería de Colombia, Colombia, Qué resultado cayó la lotería de cundinamarca, Qué resultado cayó la lotería del tolima, Qué resultado cayó la lotería de la Cruz Roja, Qué resultado cayó la lotería de Huila, Qué resultado cayó la lotería del Meta, Qué resultado cayó la lotería de manizales, Qué resultado cayó la lotería del valle, Qué resultado cayó la lotería de bogotá, Qué resultado cayó la lotería del quindio, Qué resultado cayó la lotería de medellín, Qué resultado cayó la lotería de risaralda, Qué resultado cayó la lotería de santander, Qué resultado cayó la lotería de boyacá, Qué resultado cayó la lotería de cauca, Secos lotería colombia,"
		/>
		<script
			async
			src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1430916407444614"
			crossorigin="anonymous"
		></script>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-K0SJ9TGC68"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-K0SJ9TGC68");
		</script>
	</head>
	<body class="bg-bgColor max-w-7xl m-auto">
		<Header />
		<main class="mx-5 mt-16 lg:ml-24 lg:mt-5">
			<slot />
		</main>
		<Footer />
	</body>
</html>
