---
import Layout from "../components/Layout.astro";

const response = await fetch(
  "https://secosenlinea-santander-default-rtdb.firebaseio.com/.json"
);
const lotery = await response.json();
---

<Layout pageTitle={'Santander'}>
  <section class="min-w-auto h-auto m-5 mt-24 lg:ml-28 lg:mt-5">
    <div class="my-5">
      <a class="text-white p-3 bg-slate-600 rounded-2xl opacity-60 hover:opacity-100 transition-all" href="../">⬅ Atrás</a>
    </div>
    <div class="border-b-colorPrimary border-b-2 py-2">
      <h6 class="min-w-full text-3xl font-bold text-white">Santander</h6>
    </div>
    <div class="gap-4 my-5 m-auto">
      {
        lotery.map((lotery: any) => (
          <div class="inline-grid m-4">
            <a target="_blank" href={lotery.img} class="gap-5">
              <img loading='lazy'
                class="rounded-2xl w-56 hover:scale-105 transition-all aspect-[9/10] object-cover cursor-pointer"
                src={lotery.img}
                alt={lotery.imgAlt}
                title={lotery.sorteo}
              />
            </a>
            <div class="mt-4">
              <h6 class="text-white"><span class="font-bold">Sorteo: </span>{lotery.sorteo}</h6>
              <h6 class="text-white"><span class="font-bold">Fecha: </span>{lotery.fecha}</h6>
            </div>
          </div>
        ))
      }
      </div>
  </section>
</Layout>